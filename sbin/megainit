# Source the shell rc's
if [[ "$SHELL" = *bash* ]]; then source $HOME/.bashrc
elif [[ "$SHELL" = *zsh* ]]; then source $HOME/.zshrc
fi

# export paths
if [[ "$uname" = *Darwin* ]]; then 
    export PATH=$PATH:$MEGA_HOME/macbin
elif [[ "$uname" = *Linux* ]]; then 
    export PATH=$PATH:$MEGA_HOME/linuxbin
fi

export PATH=$PATH:\
    /usr/local/bin:\
    /usr/bin:\
    /bin:\
    /usr/sbin:\
    /sbin:

export PATH=$PATH:\
    $MEGA_HOME/bin

# execute user mega_shell files
if $MEGA_ENV ; then source $MEGA_HOME/.mega_env fi
if $MEGA_LOCATIONS ; then source $MEGA_HOME/.mega_locations fi
if $MEGA_SHORTCUTS ; then source $MEGA_HOME/.mega_shortcuts fi



