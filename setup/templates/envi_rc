
export ENVI_HOME=~/.envi

# Enable location (.envi_locations)
ENVI_LOCATIONS=true

# Enable shortcuts (.envi_shortcuts)
ENVI_SHORTCUTS=true

# Enable environment variables (.envi_env)
ENVI_ENV=true

# Enable 256 colors
ENVI_256_COLORS=true

# Enable debug outputs
ENVI_DEBUG=false

ENVI_UTF_8=true

# Do not delete the following command unless you don't want to use your .bashrc or .zshrc
source $ENVI_HOME/executables/sbin/enviinit

# Delete this
echo "You may add individual git configurations in ~/.envi/config/.gitconfig_user_default, ~/.envi/config/.gitconfig_user_work, ~/.envi/config/.gitconfig_user_personal, etc."

